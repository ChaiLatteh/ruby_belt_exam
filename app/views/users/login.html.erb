<style>
  form{
    display:inline-table;
    border: 1px solid black;
    margin-right:50px;
    padding:10px;
    vertical-align:top;
  }
  label{
    display:table;
    margin-bottom:5px;
  }
</style>

<% if flash[:errors] %>
  <p style="color:red;"><%= flash[:errors] %></p>
<% end %>
<% if flash[:notices] %>
  <p style="color:green;"><%= flash[:notices] %></p>
<% end %>

<h1>Login</h1>
<form action="/login_lender" method="post">
  <h2>LENDERS</h2>
  <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
  <label>Email: <input type="email" name="lender[email]"></label>
  <label>Password: <input type="password" name="lender[password]"></label>
  <a href="/register">Click here to register</a>
  <input type="submit" value="Login">
</form>

<form action="login_borrower" method="post">
  <h2>BORROWERS</h2>
  <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
  <label>Email: <input type="email" name="borrower[email]"></label>
  <label>Password: <input type="password" name="borrower[password]"></label>
  <a href="/register">Click here to register</a>
  <input type="submit" value="Login">

</form>
